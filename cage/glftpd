USED=no
BOOT=yes
TARG=/glftpd
TYPE=tmpfs
SIZE=400
COWN=root:root
CMOD=0700
MOPT="-o noatime"
STOR=/etc/pets/store
KEEP=3
TOPT="--exclude=/glftpd/site/* --exclude=/glftpd/lost+found"
MNTC="/dev/vdb1:/glftpd/site /dev/vdb2:/glftpd/site/_arc/_kids /dev/vdb3:/glftpd/site/_arc/series"
SRVC="xinetd samba nfs-kernel-server"
